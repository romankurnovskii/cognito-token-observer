{
	"name": "cognito-token-observer",
	"version": "2.3.0",
	"description": "Monitor and refresh AWS Cognito tokens for the current session",
	"license": "MIT",
	"homepage": "https://github.com/romankurnovskii/cognito-token-observer#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/romankurnovskii/cognito-token-observer.git"
	},
	"bugs": {
		"url": "https://github.com/romankurnovskii/cognito-token-observer/issues"
	},
	"keywords": [
		"aws",
		"cognito",
		"aws auth"
	],
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"type": "module",
	"scripts": {
		"build": "yarn build:esm && yarn build:cjs",
		"build:esm": "tsc",
		"build:cjs": "tsc --module commonjs --outDir dist/cjs",
		"lint": "eslint \"{**/*,*}.{ts,tsx}\"",
		"lint:fix": "eslint --fix",
		"prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\"",
		"test": "jest --config jestconfig.json",
		"prepare": "npm run build",
		"prepublishOnly": "npm test && npm run prettier && npm run lint"
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"dependencies": {
		"aws-jwt-verify": "^3.1.0",
		"axios": "^1.1.2",
		"qs": "^6.11.0"
	},
	"devDependencies": {
		"@types/jest": "^29.0.1",
		"@types/qs": "^6.9.7",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "^29.0.3",
		"jest-canvas-mock": "^2.4.0",
		"jest-environment-jsdom": "^29.0.3",
		"prettier": "^2.7.1",
		"ts-jest": "^29.0.0",
		"typescript": "^4.8.3"
	},
	"engines": {
		"node": ">=14.0.0"
	}
}
